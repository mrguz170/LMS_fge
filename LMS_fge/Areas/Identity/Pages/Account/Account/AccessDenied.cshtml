@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Acceso denegado";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-danger">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <p class="text-danger">No cuentas con los permisos suficientes para ver este recurso.</p>
            </div>
        </div>
    </div>
</div>