@{
    string message = (ViewData["StatusMessage"] ?? string.Empty) as string;
}

@if (!string.IsNullOrEmpty(message))
{
    var statusMessageClass = message.StartsWith("Error") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible" style="margin-top: 15px;" role="alert">
        <button style="margin-top: 10px;" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @message
    </div>
}
