@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Actualizar contraseña";
}

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Usuarios</h4>
                <p class="category">Actualizar contraseña</p>
            </div>
            <div class="card-body">
                <div class="col-md-6">
                    @if (Model.Changed)
                    {
                        <p>Se han guardado los cambios en tu cuenta. Favor de actualizar la página o presiona el botón de <strong>Continuar</strong></p>
                        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Continuar</a>
                    }
                    else
                    {
                        <form id="set-password-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.NewPassword"></label>
                                <input asp-for="Input.NewPassword" class="form-control" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary">Establecer contraseña</button>

                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}